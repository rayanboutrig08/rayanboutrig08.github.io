---
layout: base.njk
---
<article class="max-w-3xl mx-auto px-6 py-20">
    <header class="mb-10 text-center">
        <h1 class="text-5xl font-serif font-bold mb-4">{{ title }}</h1>
        
        <p class="text-gray-500 uppercase tracking-widest text-sm">
            By {{ author }} — {{ date | date }}
        </p>
    </header>

    {% if thumbnail %}
        <img src="{{ thumbnail }}" class="w-full h-96 object-cover rounded-lg mb-10 shadow-lg">
    {% endif %}

    <div class="prose prose-lg lg:prose-xl font-serif leading-relaxed text-gray-800">
        {{ content | safe }}
    </div>
    
    <div class="mt-20 border-t pt-10">
        <a href="/" class="text-blue-600 hover:underline font-bold">← Back to Homepage</a>
    </div>
</article>
